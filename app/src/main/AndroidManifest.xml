<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cubosquare.mdm_compose_task_3">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Mdm App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Mdm_compose_task_3">
        <activity
            android:name=".BlockScreenActivity"
            android:exported="false"
            android:label="@string/title_activity_block_screen"
            android:theme="@style/Theme.Mdm_compose_task_3" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".AppBlockerHandlerService" />
        <service
            android:name=".YouTubeBlockAccessibilityService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service" />
        </service>

        <receiver
            android:name=".AppBlockReceiver"
            android:exported="true" />
    </application>

</manifest>